<% include ../partials/header %>

<div class="jumbotron">
    <h1>BMI - CALCULATOR</h1>
    <p>WITH THIS TOOL YOU CAN CALCULATE YOU BMI.</p>
</div>

<form method="GET" class="form-horizontal" action="/result">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">HERE YOU CAN GIVE YOUR INFORMATIONS!</h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <label for="height" class="col-sm-2 control-label">
                    HEIGHT IN CM
                </label>
                <div class="col-sm-10">
                    <input name="cm" type="text" class="form-control" id="cm" />
                </div>
            </div>
            <div class="form-group">
                <label for="height" class="col-sm-2 control-label">
                    WEIGHT IN KG
                </label>
                <div class="col-sm-10">
                    <input name="kg" type="text" class="form-control" id="kg" />
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <input type="submit" class="btn btn-primary" value="CALCULATE !" />
        </div>
    </div>
</form>

<% include ../partials/footer %>